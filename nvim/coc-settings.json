{
  "clangd.path": "/usr/local/opt/llvm/bin/clangd",
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.work", "go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    },
    "elixirLS": {
      "command": "elixir-ls",
      "filetypes": ["elixir", "eelixir"]
    }
  }
}
